{
  "name": "rtfm-sovereign",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "web:dev": "pnpm --filter @rtfm/web dev",
    "web:build": "pnpm --filter @rtfm/web build",
    "web:start": "pnpm --filter @rtfm/web start",
    "web:lint": "pnpm --filter @rtfm/web lint",
    "web:typecheck": "pnpm --filter @rtfm/web typecheck",
    "tee:build": "pnpm --filter @rtfm/tee build",
    "tee:docker": "docker build -f apps/tee/Dockerfile.tee -t rtfm-tee .",
    "contracts:test": "pnpm --filter @rtfm/contracts test",
    "contracts:compile": "pnpm --filter @rtfm/contracts compile",
    "contracts:deploy": "pnpm --filter @rtfm/contracts deploy:sepolia",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "test": "pnpm -r test",
    "build": "pnpm web:build && pnpm tee:build && pnpm contracts:compile",
    "build:production": "node scripts/production-build.js",
    "prepare:git": "node scripts/prepare-git.js",
    "clean": "rimraf .next apps/tee/dist packages/contracts/cache packages/contracts/out",
    "clean:all": "rimraf .next apps/tee/dist packages/contracts/cache packages/contracts/out node_modules apps/*/node_modules packages/*/node_modules",
    "predeploy": "pnpm build",
    "deploy": "pnpm contracts:deploy && pnpm tee:docker",
    "release": "pnpm prepare:git && pnpm build:production"
  },
  "devDependencies": {
    "@types/node": "^20",
    "ethers": "^6.16.0",
    "immer": "^10.1.1",
    "prettier": "^3",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.28.1"
}
